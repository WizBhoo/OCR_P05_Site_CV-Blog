{% extends 'layout.html.twig' %}

{% block title "Adrien PIERRARD - Contact" %}

{% block body %}

    <!--================ Start Contact Banner Area =================-->
    <section class="banner_area">
        <div class="banner_inner d-flex align-items-center">
            <div class="container">
                <div class="banner_content text-right">
                    <h1>Me Contacter</h1>
                    <div class="page_link">
                        <a href="{{ path('site.home') }}">Accueil</a>
                        <a href="{{ path('site.contact') }}">Contact</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================ End Contact Banner Area =================-->

    <!--================Contact Area =================-->
    <section class="contact_area section_gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="contact_info">
                        <div class="info_item">
                            <i class="lnr lnr-home"></i>
                            <h6>Rhône, FRANCE</h6>
                            <p>32 Rue Crépet - 69007 Lyon</p>
                        </div>
                        <div class="info_item">
                            <i class="lnr lnr-phone-handset"></i>
                            <h6><a href="#">+33 (6) 85 21 60 46</a></h6>
                            <p>Merci de laisser un message<br>avec vos coordonnées ;-)</p>
                        </div>
                        <div class="info_item">
                            <i class="lnr lnr-envelope"></i>
                            <h6><a href="#">adrien.pierrard@gmail.com</a></h6>
                            <p>Me contacter via le formulaire</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <form class="row contact_form" action="../../Utils/ContactProcess.php" method="post" id="contactForm"
                          novalidate="novalidate">
                        <div class="col-md-5 offset-1">
                            <div class="form-group">
                                <label for="name">Nom & Prénom :</label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Entrez vos Nom et Prénom">
                            </div>
                            <div class="form-group">
                                <label for="email">Adresse e-mail :</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="Entrez votre adresse mail">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="subject">Sujet :</label>
                                <input type="text" class="form-control" id="subject" name="subject" placeholder="Titre de votre Message">
                            </div>
                            <div class="form-group">
                                <label for="message">Message :</label>
                                <textarea class="form-control" name="message" id="message" rows="1" placeholder="Votre Message..."></textarea>
                            </div>
                        </div>
                        <div class="col-md-12 text-right">
                            <button type="submit" value="submit" class="primary-btn"><span>Envoyer</span></button>
                        </div>
                    </form>
                </div>
            </div>
            <div id="mapBox" class="mapBox" data-lat="40.701083" data-lon="-74.1522848" data-zoom="13" data-info="PO Box CT16122 Collins Street West, Victoria 8007, Australia."
                 data-mlat="40.701083" data-mlon="-74.1522848">
            </div>
        </div>
    </section>
    <!--================Contact Area =================-->


    <!--================Contact Success and Error message Area =================-->
    <div id="success" class="modal modal-message fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i class="fa fa-close"></i>
                    </button>
                    <h2>Merci !</h2>
                    <p>Votre message a bien été envoyé ...</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Modals error -->

    <div id="error" class="modal modal-message fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i class="fa fa-close"></i>
                    </button>
                    <h2>Une erreur s'est produite !</h2>
                    <p> Veuillez réessayer ultérieurement </p>
                </div>
            </div>
        </div>
    </div>
    <!--================End Contact Success and Error message Area =================-->

{% endblock %}
