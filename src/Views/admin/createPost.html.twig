{% extends 'adminLayout.html.twig' %}

{% block title "Ajouter un Article" %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <div class="overview-wrap">
                <h1 class="title-1">Ajouter un Article</h1>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    {{ item.title }}
                </div>
                <form action="{{ path('admin.post.create') }}"
                      method="post" enctype="multipart/form-data" class="form-horizontal">
                    <div class="card-body card-block">
                        {{ field('slug', item.slug, "Slug") }}
                        {{ field('title', item.title, "Titre") }}
                        <div class="row form-group">
                            <div class="col col-md-3">
                                <label for="user_id" class=" form-control-label">Auteur</label>
                            </div>
                            <div class="col-12 col-md-9">
                                <select name="user_id" id="user_id" class="form-control">
                                    <option value="1">Adrien PIERRARD</option>
                                    <option value="3">Yann LUCAS</option>
                                </select>
                            </div>
                        </div>
                        {{ field('extract', item.extract, "Extrait", {type: 'textarea'}) }}
                        {{ field('content', item.content, "Contenu", {type: 'textarea'}) }}
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fa fa-dot-circle-o"></i> Cr√©er
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>

{% endblock %}