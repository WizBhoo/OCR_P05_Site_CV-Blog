{% extends 'loginLayout.html.twig' %}

{% block title "APi - Password Oublié" %}

{% block body %}

    <!--================ Start Forgotten Password Area =================-->

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form validate-form" action="{{ path('auth.password') }}" method="post">
					<span class="login100-form-title p-b-26">
						<a href="{{ path('site.home') }}">
                            <img src="../../img/logo.png" alt="APi" />
                         </a>
					</span>
                    <span class="login100-form-title p-b-26">
						Password Oublié
					</span>
                    {{ csrf_input() }}
                    <div class="wrap-input100 form-group">
                        {{ field('email', null, {type: 'email', class: 'input100 email'}) }}
                        <span class="focus-input100" data-placeholder="Email"></span>
                    </div>
                    <div class="container-login100-form-btn p-b-26">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn">
                                Réinitialiser Password
                            </button>
                        </div>
                    </div>
                    <div class="p-b-26">
                        {% if flash('success') %}
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <div class="alert-success">
                                        {{ flash('success') }}
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                        {% if flash('error') %}
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <div class="alert-danger">
                                        {{ flash('error') }}
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                    <div class="text-center">
						<span class="txt1">
							Retour ->
						</span>
                        <a class="txt2" href="{{ path('auth.login') }}">
                            Se connecter
                        </a><br>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--================ End Forgotten Password Area =================-->

{% endblock %}
